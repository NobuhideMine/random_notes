<div class="container">
    <div class="row">
        <div class="col">
            <h2>User info</h2>
            <%= form_with model:@user, url: admin_user_path(@user), local:true do |f| %>
            <%= render 'layouts/errores', obj: @user %>
              <div class="form-group">
                <%= f.label :name %>
                <%= f.text_field :name, class: "form-control name" %>
              </div>
              <div class="form-group">  
                <%= f.label :image %>
                <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
              </div>
              <div class="form-group">
                <%= f.label :introduction %>
                <%= f.text_area :introduction, class: "form-control introduction" %>
              </div>
              <div class="form-group">
                <%= f.label :販売ステータス %></th>
                <%= f.radio_button :is_active, true, checked: true %>
                <%= f.label :is_active, "有効" %>
                <%= f.radio_button :is_active, false %>
                <%= f.label :is_active, "無効" %>
              </div>
              <div class="form-group">
                <%= f.submit class: 'btn btn-secondary' %>
              </div>
            <% end %>
        </div>
    </div>
</div>