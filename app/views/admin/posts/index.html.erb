<div class="container mt-2">
    <div class="row ">
        <div class="col">
            <div class="table-responsive">
                <table class='table'>
                    <thead>
                        <tr>
                            <th>Post Index</th>
                            <th>name</th>
                            <th>post</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @posts.each do |post| %>
                        <tr>
                            <td>
                                <%= link_to admin_user_path(post.user.id) do %>
                                    <%= image_tag post.user.get_profile_image(70,70) %>
                                <% end %>
                            </td>
                            <td>
                                <%= link_to admin_user_path(post.user.id) do %>
                                    <%= post.user.name %>
                                <% end %>
                            </td>
                            <td><h3><%= link_to post.title, admin_post_path(post.id) %></h3></td>
                            <td><%= render '/public/post_comments/counter', post: post %></td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
                <div class="d-flex justify-content-center">
                    <%= paginate @posts %>
                </div>
            </div>
        </div>        
    </div>
</div>