<div class="container">
    <h2>Post Index</h2>
    <div class="row mx-auto">
            <table>
                <thead>
                    <tr>
                        <th></th>
                        <th>name</th>
                        <th>post</th>
                    </tr>
                </thead>
                <tbody>
                    <% @posts.each do |post| %>
                    <tr>
                        <td>
                            <%= link_to admin_user_path(post.user.id) do %>
                                <%= image_tag post.user.get_profile_image(70,70) %>
                            <% end %>
                        </td>
                        <td>
                            <%= link_to admin_user_path(post.user.id) do %>
                                <%= post.user.name %>
                            <% end %>
                        </td>
                        <td><%= link_to post.title, admin_post_path(post.id) %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
            <%= paginate @posts %>
    </div>
</div>