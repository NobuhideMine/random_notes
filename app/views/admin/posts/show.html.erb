<div class="container">
    <div class="row">
        <div class="col-md-10">
            <table>
                <tr>
                    <th>
                        <%= link_to admin_user_path(@post.user) do %>
                            <%= image_tag @post.user.get_profile_image(60,60) %><br>
                            <%= @user.name %>
                        <% end %>
                        <div>
                            <%= @post.updated_at.strftime('20%y.%m/%d') %> 更新
                            <%= render '/public/post_comments/counter', post: @post %>
                        </div>
                        
                    </th>
                </tr>
                <tr>
                    <td><h3><strong><%= @post.title %></strong></h3></td>
                </tr>
                    <td style= "width:100%; height:300px;"><%= markdown(@post.body).html_safe %></td>
                </tr>
                <tr><%= render '/public/post_comments/index', post: @post %></tr>
            </table>
        </div>    
    </div>
</div>