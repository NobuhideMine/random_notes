<div class="container">
    <div class="row">
        <div class="col">
            <div class="mt-3">
                <h2>UserIndex</h2>
                <%= search_form_for @q, url: users_path, method: :get do |f| %>
                  <%= f.search_field :name_cont, placeholder: 'User search' %>
                  <%= f.submit 'Search' %>
                <% end %>
            </div>
            
            <div class="table-sensitive">
            <table class='table'>
                <thead>
                    <tr>
                        <th>image</th>
                        <th>name</th>
                        <th colspan="3"></th>  
                    </tr>
                </thead>
                <tbody>
                <% @users.each do |user| %>
                    <tr>
                        <td><%= image_tag user.get_profile_image(80,80), 
                                style: "border-radius: 50%; width: 80px; height: 80px; object-fit:cover;" %></td>
                        <td><%= user.name %></td>
                        <td><%= link_to 'Show', user_path(user.id) %></td>
                        <th>follows</th>
                        <td><%= link_to user.followings.count, user_followings_path(user) %></td>
                        <th>followers</th>
                        <td><%= link_to user.followers.count, user_followers_path(user) %></td>
                    </tr>            
                <% end %>
                </tbody>
            </table>
            </div>
            <div class="d-flex justify-content-center">
                <%= paginate @users %>
            </div>
            
        </div>
    </div>
</div>