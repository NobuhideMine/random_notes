<div class="container">
    <div class="row">
        <div class="col">
            <div class="mt-3">
                <h2>UserIndex</h2>
                <%= search_form_for @q, url: users_path, method: :get do |f| %>
                  <%= f.search_field :name_cont, placeholder: 'User search' %>
                  <%= f.submit 'Search' %>
                <% end %>
            </div>
            <%= render "public/users/index", users: @users %>
            <%= paginate @users %>
        </div>
    </div>
</div>