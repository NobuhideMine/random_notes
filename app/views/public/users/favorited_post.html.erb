<div class="container">
    <div class="row">
        <div class="col">
            <h2>Favorited Post</h2>
            
            <table class="table table-hover">
                <tbody>
                    <% @favorited_post.each do |post| %>
                    <tr>
                        <td>
                            <%= link_to user_path(post.user.id) do %>
                                <%= image_tag post.user.get_profile_image(70,70) %>
                                <%= post.user.name %>
                            <% end %>
                        </td>
                        <td><%= link_to post.title, post_path(post.id) %></td>
                        <td>
                            <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
                            <%= post.favorites.count %>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
            <div><%= paginate @favorited_post %></div>
        </div>
    </div>
</div>