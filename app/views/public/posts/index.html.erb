<div class="container">
    <div class="row">
        <div class="col">
            <h2>Index</h2>
            <table class="table table-hover">
                <tbody>
                    <% @posts.each do |post| %>
                    <tr>
                        <td>
                            <%= link_to user_path(post.user.id) do %>
                                <%= image_tag post.user.get_profile_image(70,70) %>
                                <%= post.user.name %>
                            <% end %>
                        </td>
                        <td><%= link_to post.title, post_path(post.id) %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>