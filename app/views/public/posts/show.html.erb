<div class="container">
    <div class="row px-3">
        <%= link_to user_path(@post.user) do %>
            <%= image_tag @post.user.get_profile_image(80,80) %><br>
            <%= @user.name %>
        <% end %>
        <span class = "favorite_btn_<%= @post.id %> mt-4 mx-2" %>  
            <%= render "/public/favorites/btn", post: @post %>
        </span>
        <div class="post-comments-counter mt-4">
            <%= render '/public/post_comments/counter', post: @post %>
        </div>
        
    </div>
    
    <div class="row mt-3 px-3">
        <div class="col">
            <table class="my-2">    
                <tr>
                    <td>
                        <h1><strong class="mx-4"><%= @post.title %></strong></h1><%= @post.updated_at.strftime('20%y.%m/%d') %> 更新
                    </td>
                </tr>
                <tr>
                    <td style= "width:100%; height:300px;"><%= markdown(@post.body).html_safe %></td>
                </tr>
            </table>
            <div class="my-3">
                <% if @post.user == current_user %>
                    <%= link_to "Edit", edit_post_path(@post.id), class: "btn btn-success" %>
                    <%= link_to "Destroy", post_path(@post), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %>
                <% end %>
            </div>

            <div class="post-comments-index">
                <%= render '/public/post_comments/index', post: @post %>
            </div>
            
                <%= render '/public/post_comments/form', post: @post, post_comment: @post_comment %>
                  
                
            
        </div>
    </div>
</div>